{{#if updateQuestionForm}}
  <form>
    <div class="form-group">
      <label for="update-question-title">Question</label>
      {{input value=update-question-title id='update-question-title'}}
    </div>
    <div class="form-group">
      <label for="update-question-notes">Additional Notes</label>
      {{input value=update-question-notes id='update-question-notes'}}
    </div>
    <button type='submit' class='btn btn-success' {{action 'updateQuestion1' question}}>Save Changes</button>
    <button type='button' {{action 'hideUpdateQuestion'}}>Cancel</button>
  </form>
{{else}}
  <button type='button' class='btn btn-sm btn-warning' {{action 'showUpdateQuestion'}}>Edit</button>
  <button type='button' class='btn btn-sm btn-danger' {{action 'deleteQuestion1' question}}>Delete</button>
{{/if}}
