{{#if questionForm}}
  <form>
    <div class="form-group">
      <label for="question-title">Question</label>
      {{input value=question-title id='question-title'}}
    </div>
    <div class="form-group">
      <label for="question-author">Author</label>
      {{input value=question-author id='question-author'}}
    </div>
    <div class="form-group">
      <label for="question-notes">Additional Notes</label>
      {{input value=question-notes id='question-notes'}}
    </div>
    <button type='submit' class='btn btn-success' {{action 'submitQuestion1'}}>Submit Question</button>
    <button type='button' {{action 'hideQuestionForm'}}>Cancel</button>
  </form>
{{else}}
  <button type='button' class='btn btn-info' {{action 'showQuestionForm'}}>Ask a New Question</button>
{{/if}}
