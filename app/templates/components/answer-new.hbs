{{#if answerForm}}
  <form>
    <div class="form-group">
      <label for="answer-content">Answer</label>
      {{input value=answer-content id='answer-content'}}
    </div>
    <div class="form-group">
      <label for="answer-author">Author</label>
      {{input value=answer-author id='answer-author'}}
    </div>
    <button type='submit' class='btn btn-success' {{action 'submitAnswer1'}}>Submit Response</button>
    <button type='button' {{action 'hideAnswerForm'}}>Cancel</button>
  </form>
{{else}}
  <button type='button' class='btn btn-info' {{action 'showAnswerForm'}}>Join the Discussion!</button>
{{/if}}
